            <post>flavorzyb2008@gmail.com</post>
            <archive>bug反馈请发送邮件</archive>
        </mailingList>
    </mailingLists>

    <organization>
        <name>zhuyanbin.com</name>
        <url>https://github.com/flavorzyb/MapEditor</url>
    </organization>
</project>
